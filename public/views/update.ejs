<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Movie</title>
    <link rel="stylesheet" href="../css/create.css" />
  </head>
  <body>
    <header> 
      <div class="headerbox1">
        <img src="../images/Logo_JS_Pro.png" alt="">
        <a href="/">Home</a>
        <% if (moviedata.userName != "" && moviedata.roles == "Admin") { %>
          <a href="/movies">Movies</a>
          <a href="/users">Users</a>
          <% }%>
        <% if (moviedata.roles == "User"){ %>
        <a href="/favorite/<%=moviedata.user_id%>">Favorite</a>
        <% }%>
      </div>
      <div class="headerbox2"> 
        <% if (!moviedata.userName) { %>
        <a class="signup" href="/login">Sign In</a>
        <% } %>
      <% if (moviedata.userName) { %>
        <ul>
          <li>
          <img src="../images/<%=moviedata.profilePicture%>" alt="" class="profile">
          <ul class="dropdown">
            <li><a href="/user/<%=moviedata.user_id%>">Edit User</a></li>
            <li><a href="/logout">Sign out</a></li>
          </ul>
          </li>
        </ul>
      </div>
      <% } %>
    </header>
    <h1>Update Movie</h1>
    <form method="post" action="/update/<%=movies.movie_id%>" enctype="multipart/form-data">
      <label for="title">Title:</label>
      <input type="text" name="title"  value="<%= movies.title%>" />
      <br />
      <label for="author">Author:</label>
      <input type="text"name="director" value="<%= movies.director%>"/>
      <br>
      <input type="file" name="imageFile"/>
      <input type="submit" value="Update" />
    </form>
    <a href="/">Back to List</a>
  </body>
</html>
